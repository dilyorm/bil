{
  "name": "@bil/mobile",
  "version": "1.0.0",
  "description": "BIL Core System Mobile Application",
  "main": "expo-router/entry",
  "scripts": {
    "dev": "expo start",
    "start": "expo start --clear",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build": "echo 'Mobile build requires Expo CLI - use expo build or eas build'",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    "clean": "expo r -c",
    "lint": "cross-env ESLINT_USE_FLAT_CONFIG=false eslint . --ext .ts,.tsx",
    "lint:fix": "cross-env ESLINT_USE_FLAT_CONFIG=false eslint . --ext .ts,.tsx --fix",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@bil/shared": "file:../shared",
    "@hookform/resolvers": "^5.2.2",
    "@react-native-async-storage/async-storage": "1.18.2",
    "@react-navigation/bottom-tabs": "^7.8.1",
    "@react-navigation/native": "^7.1.19",
    "@react-navigation/stack": "^7.6.2",
    "expo": "~49.0.0",
    "expo-av": "~13.4.1",
    "expo-local-authentication": "~13.4.1",
    "expo-router": "^2.0.0",
    "expo-secure-store": "~12.3.1",
    "expo-speech": "~11.3.0",
    "expo-status-bar": "~1.6.0",
    "react": "18.2.0",
    "react-hook-form": "^7.66.0",
    "react-native": "0.72.10",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-reanimated": "~3.3.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.0",
    "socket.io-client": "^4.7.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@testing-library/react-native": "^11.5.4",
    "@types/jest": "^30.0.0",
    "@types/react": "~18.2.14",
    "@types/react-native": "~0.72.2",
    "jest": "^29.2.1",
    "jest-expo": "~49.0.0",
    "typescript": "^5.1.3"
  }
}
