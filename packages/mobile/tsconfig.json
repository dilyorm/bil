{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@bil/shared": [
        "../shared/src"
      ],
      "@bil/shared/*": [
        "../shared/src/*"
      ]
    }
