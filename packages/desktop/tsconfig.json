{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "composite": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "build", "node_modules"],
  "references": [
    { "path": "../shared" }
  ]
}